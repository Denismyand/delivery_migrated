generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model dishes {
  id         String @id
  restaurant String
  product    String
  image      String
  cost       Int
}

model restaurants {
  id   String  @id
  name String
  lat  Decimal
  lng  Decimal
}

model orders {
  id               String @id
  customer_id      String
  customer_name    String
  customer_email   String
  customer_phone   String
  customer_address String
  order_items      String
  order_time       String
}

model users {
  id       Int    @id @default(autoincrement())
  login    String
  password String
  email    String
  phone    String
}
